<h1> Blog Posts </h1>

<!-- no '=' if not an output -->
<!-- Calling all posts to be on landing page -->
<% @posts.each do |post| %>
            <div class="card m-3">
                <h3 class="card-title m-3">
                    <%= post.title %>
                </h3>

                <p class="card-text m-3"> 
                    <%= post.body %>
                </p>

                <%= link_to "Read More", post_path(post), :class => 'btn btn-dark' %>
            </div>
<% end %>